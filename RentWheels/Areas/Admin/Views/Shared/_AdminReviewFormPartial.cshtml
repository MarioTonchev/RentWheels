@model ReviewFormViewModel

<form asp-action="Edit" asp-controller="AdminReview" asp-area="Admin" method="post">
	<div class="mb-3">
		<label asp-for="@Model.Rating" class="form-label">Rating</label>
		<input asp-for="@Model.Rating" class="form-control" required />
		<span asp-validation-for="@Model.Rating" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="@Model.Comment" class="form-label">Comment</label>
		<input asp-for="@Model.Comment" class="form-control" required />
		<span asp-validation-for="@Model.Comment" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<input type="hidden" asp-for="@Model.CarId" />
	</div>

	<button type="submit" class="btn btn-success">Finish</button>
</form>