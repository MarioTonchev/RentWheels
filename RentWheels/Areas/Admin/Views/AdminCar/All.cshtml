@model IEnumerable<AdminAllCarsViewModel>

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Entities</title>
	<style>
		.entity-card {
			margin-bottom: 20px;
			width: 400px;
		}

			.entity-card img {
				max-width: 100%;
				height: auto;
			}
	</style>
</head>
<body>	
	<div class="container">
		<div class="row">
			@foreach (var car in Model)
			{
				<div class="col-md-6">
					<div class="card entity-card">
						<img class="card-img-top" src="@car.ImageUrl" alt="Entity Image">
						<div class="card-body">
							<h5 class="card-title">@car.Brand</h5>
							<p class="card-text">Model: @car.CarModel</p>
							<p class="card-text">Owner: @car.UserEmail</p>
							<div class="d-flex justify-content-between">
								<a asp-action="Edit" asp-controller="AdminCar" asp-area="Admin" asp-route-id="@car.Id" class="btn btn-success">Edit</a>
								<a asp-action="AllByCar" asp-controller="AdminReview" asp-area="Admin" asp-route-id="@car.Id" class="btn btn-secondary">Reviews</a>
								<form asp-action="Remove" asp-controller="AdminCar" asp-area="Admin" asp-route-id="@car.Id" method="post">
									<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to remove this car?');">Remove</button>
								</form>
							</div>
						</div>
					</div>
				</div>
			}
		</div>		
	</div>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
