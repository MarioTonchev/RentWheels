@model IEnumerable<AllMessagesViewModel>


<h2>Inbox</h2>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            @if (Model.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>From</th>
                            <th>Title</th>
                            <th>Message</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model)
                        {
                            <tr>
                                <td>@message.SenderUserName</td>
                                <td>@message.Title</td>
                                <td>@message.Content</td>
                                <td>@message.CreatedOn</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h3 class="text-center" style="margin-top:250px; margin-left:400px">Your inbox is empty.</h3>
            }
        </div>
    </div>
</div>