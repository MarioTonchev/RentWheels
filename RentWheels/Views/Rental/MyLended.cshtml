@model IEnumerable<MyLendedCarsViewModel>

<table class="table">
    <thead>
        <tr>
            <th>Car</th>
            <th>Available:</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@($"{car.Brand} {car.CarModel}")</td>
                <td>@car.Available</td>
                <td>
                    <form asp-action="Remove" asp-controller="Car" asp-route-id="@car.Id" method="post">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to remove this car?');">Remove car</button>
                    </form>
                </td>
                <td><a asp-action="Edit" asp-controller="Car" asp-route-id="@car.Id" class="btn btn-primary">Edit</a></td>
            </tr>
        }
    </tbody>
</table>